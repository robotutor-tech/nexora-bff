{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nexora-bff/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/nexora-bff/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/nexora-bff",
  "projects": {
    "bff": {
      "type": "application",
      "root": "apps/bff",
      "entryFile": "main",
      "sourceRoot": "apps/bff/src",
      "compilerOptions": {
        "tsConfigPath": "apps/bff/tsconfig.app.json"
      }
    },
    "mqtt-handler": {
      "type": "application",
      "root": "apps/mqtt-handler",
      "entryFile": "main",
      "sourceRoot": "apps/mqtt-handler/src",
      "compilerOptions": {
        "tsConfigPath": "apps/mqtt-handler/tsconfig.app.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    }
  }
}